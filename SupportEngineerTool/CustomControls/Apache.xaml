<UserControl x:Class="SupportEngineerTool.CustomControls.Apache"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SupportEngineerTool.CustomControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBlock.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.GroupBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <materialDesign:Card Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFF179F1">
                <StackPanel Margin="5">
                    <Border>
                        <!-- TODO: Change TextBox below to TextBlock and use the appropriate style that you'd like!-->

                        <TextBlock x:Name="HeaderTextBlock" TextWrapping="Wrap" VerticalAlignment="Center" Height="Auto" Width="Auto" 
                               Text="Drag and Drop PFX or PKCS File Below" HorizontalAlignment="Center" Style="{StaticResource MaterialDesignHeadlineTextBlock}"></TextBlock>
                    </Border>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="3" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" >
                <StackPanel Margin="5">
                    <Border>
                        <!-- TODO: Change TextBox below to TextBlock and use the appropriate style that you'd like!-->

                        <TextBlock x:Name="DragAndDropBox" TextWrapping="Wrap" VerticalAlignment="Center" Height="400" Width="Auto"
                               Text="Drag and Drop Here..." HorizontalAlignment="Center" Style="{StaticResource MaterialDesignHeadlineTextBlock}" ></TextBlock>
                    </Border>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

    </Grid>
</UserControl>
